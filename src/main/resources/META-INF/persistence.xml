<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="persistence_unit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
<!--        <class>com.nooglers.domains.Class</class>-->
<!--        <class>com.nooglers.domains.Card</class>-->
<!--        <class>com.nooglers.domains.Folder</class>-->
<!--        <class>com.nooglers.domains.Module</class>-->
        <class>com.nooglers.domains.User</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/quizlet"/>
            <property name="jakarta.persistence.jdbc.users" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="onam"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>
